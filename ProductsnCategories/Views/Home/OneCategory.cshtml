<div class="text-center">
    <h1 class="display-4">Products and Categories</h1>
    <hr>
    <p><a href="/">Products</a> | <a href="/categories">Categories</a></p>
    <hr>
    @model MyViewModel
    <h1 class="display-4">@Model.Category.Name</h1>
    <section class="d-flex justify-content-around">
        <div>
            <h1 class="display-6 mt-3">Products</h1>
            <ul>
                @foreach (Association c in @Model.Category.CAssociations)
                {
                    <li>@c.Product.Name</li>
                }
            </ul>
        </div>
        <div>
            <h1 class="display-6 mt-3">Add Product</h1>
            <form action="/association/create" method="post">
                <select class="form-select mb-4" name="ProductId">
                    @foreach (Product p in Model.AllProducts)
                    {
                        <option value="@p.ProductId">@p.Name</option>
                    }
                </select>
                <input type="hidden" name="CategoryId" value="@Model.Category.CategoryId">
                <input type="submit" value="Add" class="btn btn-primary">
            </form>
        </div>
    </section>
</div>