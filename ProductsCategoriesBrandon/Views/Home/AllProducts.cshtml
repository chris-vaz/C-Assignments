@model MyViewModel

<div class="flex justify-around w-3/4">
    <form asp-action="CreateProduct">
        <h1 class="text-lg font-bold">All Products</h1>
        <span></span>
        <div class="flex justify-between">
            <label asp-for="@Model.Product.Name">Name: </label>
            <input type="text" asp-for="@Model.Product.Name" class="border-2 rounded border-slate-300" name="Name">
        </div>
        <div class="flex justify-between">
            <label asp-for="@Model.Product.Description">Description:</label>
            <input type="text" asp-for="@Model.Product.Description" class="border-2 rounded border-slate-300"
                name="Description">
        </div>
        <div class="flex justify-between">
            <label asp-for="@Model.Product.Price">Price:</label>
            <input type="number" step="0.01" asp-for="@Model.Product.Price" class="border-2 rounded border-slate-300"
                name="Price">
        </div>
        <input type="submit" value="Create" class="text-center bg-indigo-400 w-full rounded cursor-pointer">
    </form>

    <div>
        <h1 class="text-lg font-bold">Products</h1>
        <div class="flex flex-col">
            @foreach (Product product in @Model.AllProducts)
            {
                <a href="/product/@product.ProductId">@product.Name</a>
            }
        </div>
    </div>



</div>