@{
    ViewData["Title"] = "Generator";
}

<div class="text-center">
    @* FIX: Misspelled "Location" and "Locaton" in session, so information was not showing *@
    <h2>Welcome, @Context.Session.GetString("Username") from @Context.Session.GetString("Location")</h2>
    <h2>Here is your randomly generated passcode:</h2>
    <h1 class="passcode">@Context.Session.GetString("Passcode")</h1>
    <div class="d-flex mx-auto w-25 justify-content-center">
        @* FIX: Missing method="post" so we never triggered a post request *@
        <form action="reset" method="post">
            <label>Not you?</label>
            <input type="submit" value="Log out" class="btn btn-danger">
        </form>
        <form action="generate/new" method="post">
            <label>Want a new code?</label>
            <input type="submit" value="New code" class="btn btn-info">
        </form>
    </div>
</div>